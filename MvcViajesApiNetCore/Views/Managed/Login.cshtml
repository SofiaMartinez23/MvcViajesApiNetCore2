@model NugetViajesSMG.Models.LoginModel

<!-- Fondo y shapes del glassmorphism -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<section class="vh-100 d-flex align-items-center justify-content-center">
    <form method="post" id="loginForm" class="glass-form">
        <h3 style="color:#92390c">Sign In</h3>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email" style="color: #fff;">Correo Electrónico</label>
            <input asp-for="Email" type="text" placeholder="Email" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Clave" style="color: #fff;">Contraseña</label>
            <div class="input-group">
                <input asp-for="Clave" type="password" id="claveField" placeholder="Password" class="form-control" required />
                <span class="input-group-text" onclick="togglePassword('claveField', 'toggleClaveIcon')" style="cursor:pointer;">
                    <i id="toggleClaveIcon" class="bi bi-eye-slash"></i>
                </span>
            </div>
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div>

        <button type="submit" class="btn custom-login-btn">Log In</button>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }

        <p style="margin-top: 20px; text-align:center; color: #fff;">
            ¿No tienes una cuenta?
            <a asp-controller="Managed" asp-action="Registro" style="color: #fff; text-decoration: underline;">Regístrate aquí</a>
        </p>
    </form>
</section>

<!-- Estilos Glassmorphism -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    body {
        background-image: url('https://i.gifer.com/5Mf2.gif');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: #fff; /* General text color for better contrast */
    }

    .glass-form {
        position: relative;
        z-index: 1;
        width: 400px;
        background-color: rgba(0, 0, 0, 0.5); /* Darker background for better contrast */
        padding: 50px 35px;
        border-radius: 10px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.2); /* Slightly lighter border */
        box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
        color: #fff;
    }

        .glass-form h3 {
            font-size: 32px;
            font-weight: 500;
            text-align: center;
            margin-bottom: 30px;
            color: #fff;
        }

        .glass-form label {
            display: block;
            margin-top: 20px;
            font-size: 16px;
            font-weight: 500;
            color: #fff;
        }

        .glass-form input {
            display: block;
            height: 50px;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.07);
            border-radius: 3px;
            padding: 0 10px;
            margin-top: 8px;
            font-size: 14px;
            font-weight: 300;
            color: #fff;
            border: none;
        }

            .glass-form input::placeholder {
                color: #e5e5e5;
            }

        .glass-form button {
            margin-top: 40px;
            width: 100%;
            background-color: #92390c;
            color: white;
            padding: 15px 0;
            font-size: 18px;
            font-weight: 600;
            border-radius: 5px;
            cursor: pointer;
            border: none;
        }

        .glass-form .social {
            margin-top: 30px;
            display: flex;
            justify-content: space-between;
        }

            .glass-form .social div {
                width: 48%;
                padding: 10px;
                border-radius: 3px;
                background-color: rgba(255, 255, 255, 0.27);
                color: #eaf0fb;
                text-align: center;
                cursor: pointer;
                transition: background 0.3s ease;
            }

                .glass-form .social div:hover {
                    background-color: rgba(255, 255, 255, 0.47);
                }

            .glass-form .social i {
                margin-right: 6px;
            }

    .text-danger {
        color: #ffbaba;
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }

    .alert-danger {
        background-color: rgba(255, 0, 0, 0.1);
        border: 1px solid #f00;
        color: #f00;
        text-align: center;
        padding: 10px;
        margin-top: 15px;
        border-radius: 4px;
    }

    .custom-login-btn {
        background-color: #92390c;
        color: white;
        border: none;
        transition: background 0.3s ease;
    }

        .custom-login-btn:hover {
            background-color: #7a2e09; /* un tono más oscuro al pasar el mouse */
        }

    .input-group {
        background-color: rgba(255, 255, 255, 0.07);
        border-radius: 3px;
        overflow: hidden;
        margin-top: 8px;
    }

        .input-group .form-control {
            background-color: transparent !important;
            border: none;
            color: white;
            box-shadow: none;
        }

    .input-group-text {
        background-color: transparent;
        border: none;
        color: white;
        cursor: pointer;
        display: flex;
        align-items: center;
        padding: 0 10px;
    }
</style>

<script>
    // Función para mostrar/ocultar la contraseña
    function togglePassword(fieldId, iconId) {
        const passwordField = document.getElementById(fieldId);
        const toggleIcon = document.getElementById(iconId);

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            toggleIcon.classList.remove('bi-eye-slash');
            toggleIcon.classList.add('bi-eye');
        } else {
            passwordField.type = 'password';
            toggleIcon.classList.remove('bi-eye');
            toggleIcon.classList.add('bi-eye-slash');
        }
    }
</script>

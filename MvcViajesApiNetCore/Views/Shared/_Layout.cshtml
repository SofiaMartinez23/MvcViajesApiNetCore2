<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EntdGeh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcViajesApiNetCore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        footer {
            margin-top: auto;
        }

        .navbar {
            background-color: #000000;
            padding: 1rem 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .navbar .navbar-brand {
                font-weight: bold;
                font-size: 1.75rem;
                text-transform: uppercase;
            }

        .navbar-nav {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            width: 100%;
        }

            .navbar-nav .nav-item {
                margin-left: 1rem;
                margin-right: 1rem;
            }

            .navbar-nav .nav-link {
                color: white;
                font-size: 1.1rem;
                font-weight: 500;
                transition: background-color 0.3s ease, color 0.3s ease;
                text-decoration: none !important;
            }

                .navbar-nav .nav-link:hover,
                .navbar-nav .nav-item.active .nav-link {
                    background-color: #333231;
                    color: white;
                    border-radius: 5px;
                }

            .navbar-nav .nav-item.active .nav-link {
                background-color: #333231;
                color: white;
            }

            .navbar-nav .nav-link {
                position: relative;
                padding: 10px 20px;
                border-radius: 5px;
            }

                .navbar-nav .nav-link::after {
                    content: '';
                    position: absolute;
                    width: 0%;
                    height: 2px;
                    background-color: #3c4a76;
                    transition: width 0.3s ease;
                    bottom: 0;
                    left: 50%;
                    transform: translateX(-50%);
                }

                .navbar-nav .nav-link:hover::after {
                    width: 100%;
                }

            .navbar-nav.ml-auto .nav-item:last-child {
                margin-left: auto;
            }

        .profile-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .profile-circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #333;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 16px;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Lugares" asp-action="Index">EntdGeh</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Lugares" asp-action="Index"><i class="fas fa-map-marker-alt pe-2"></i>Lugares</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link mx-2" asp-controller="Usuarios" asp-action="Index">
                                    <i class="fas fa-users pe-2"></i>Usuarios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2" asp-controller="Usuarios" asp-action="Perfil">
                                    <i class="fas fa-user-cog pe-2"></i>Perfil
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2" asp-controller="Managed" asp-action="Logout">
                                    <img src="https://cdn-icons-png.flaticon.com/128/3456/3456192.png" alt="Logout" style="width: 20px; height: 20px; filter: invert(100%); margin-right: 5px;">Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Managed" asp-action="Login" class="nav-link mx-2 d-flex align-items-center">
                                    <div class="profile-circle"><i class="fas fa-user"></i></div>
                                    Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted m-3 mt-auto">
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>